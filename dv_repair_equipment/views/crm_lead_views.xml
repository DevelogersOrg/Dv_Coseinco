		<field name="model">crm.lead</field>
		<field name="arch" type="xml">
            <kanban default_group_by="repair_state" class="o_kanban_small_column o_kanban_project_tasks" on_create="quick_create" quick_create_view="dv_repair_equipment.quick_create_crm_lead_form" records_draggable="false">
                <field name="repair_state"/>
                <field name="n_ticket"/>
                <field name="partner_id"/>
                <field name="repair_user_id"/>
                <field name="is_displayed_in_both"/>
                <field name="create_date"/>
                <field name="__last_update"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top  d-flex flex-column ml-1">
                                <h3 class="o_kanban_record_title" style="margin-bottom: 8px !important"><field name="name"/> - <field name="repair_order_type_id"/></h3>
                                <t t-if="record.repair_state.raw_value != 'new'">
                                    <span>N° ticket: <t t-if="record.n_ticket.value != false"><field name="n_ticket"/></t><t t-if="record.n_ticket.value == false">xxxxxxxx</t></span>
                                    <span>Cliente: <t t-if="record.partner_id.value != false"><field name="partner_id"/></t><t t-if="record.partner_id.value == false">xxxxxxxx</t></span>
                                    <span>Tecnico asignado: <t t-if="record.repair_user_id.value != false"><field name="repair_user_id"/></t><t t-if="record.repair_user_id.value == false">xxxxxxxx</t></span>
                                </t>
                            </div>
                            <div class="o_kanban_record_bottom" style="border-top: 1px solid #e0e0e0 !important; padding-top: 16px !important;">
                                <div class="text-muted">
                                    <span>Creado :<t t-esc="record.create_date.value" modifiers="{}"/></span><br/>
                                    <span>Actulizado: <t t-esc="record.__last_update.value" modifiers="{}"/></span><br/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="crm_lead_state" widget="label_selection"
                                    options="{'classes': {'new': 'success', 'assigned': 'danger', 'assigned_ready': 'warning', 'dg_ready': 'warning',
                                    'dg_ready_ready': 'danger', 'quoted' : 'warning', 'confirmed': 'success'}}" 
                                    modifiers="{'readonly':true}"/>
                                </div>
                            </div>
                            <t t-if="record.is_displayed_in_both.raw_value == false">
                                <button name="action_change_state"
                                type="object"
                                class="btn btn-primary"
                                style="display: block !important; width: 100% !important; margin-top: 10px !important;">
                                Confirmar
                                </button>
                            </t>
                        </div>
                    </t>
                </templates>
            </kanban>
		</field>
	</record>


    <!-- _________________________________________________________________________ -->
    <!-- FORM -->
    <!-- _________________________________________________________________________ -->


    <!-- Formulario para cliente -->
    <record id="crm_lead_form_view_inherited" model="ir.ui.view">
		<field name="name">crm.lead.view.form.inherited</field>
		<field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
		<field name="arch" type="xml">
            <xpath expr="//field[@name='active']" position="after">
                <field name="client_state" invisible="1"/>
                <field name="is_now_in_client_view" invisible="1"/>
            </xpath>
            <xpath expr="//group[@name='lead_partner']" position="after">
                <group>
                    <field name="repair_order_type_id"/>
                    <label for="n_ticket" string="Ticket"/>
                    <h1 attrs="{'invisible': [('n_ticket','=', False)]}">N° : <field name="n_ticket" readonly="1"/></h1>
                </group>

            </xpath>
            <xpath expr="//page[@name='lead']" position="after">
                <page name="assigned_view" string="Asignado para diagnóstico" attrs="{'invisible': [('client_state','!=','assigned')]}">
                    <group>
                        <group string="Cliente" nolabel="1">
                            <field name="partner_id" attrs="{'required': [('client_state','=','assigned')]}" string="Cliente *"/>
                        </group>
                        <group string="Tecnico" nolabel="1">
                            <field name="repair_user_id" attrs="{'required': [('client_state','=','assigned')]}" string="Técnico *"/>
                        </group>
                    </group>
                    <group string="Equipo">
                        <field name="n_active"/>
                        <field name="n_serie"/>
                        <field name="repair_equipment_type_id"/>
                        <field name="equipment_model"/>
                        <field name="equipment_accessories"/>
                        <field name="equipment_failure_report" attrs="{'required': [('client_state','=','assigned')]}" string="Reporte de Falla *"/>
                        <field name="other_equipment_data"/>
                        <field name="repair_order_components_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="features"/>
                                <field name="details"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="name"/>
                                    <field name="features"/>
                                    <field name="details"/>
                                </group>
                            </form>
                        </field>
                    </group>
                    <span>Campos obligatorios (*)</span>
                    <br/>
                    <group attrs="{'invisible': [('n_ticket','!=', False)]}">
                        <button name="gen_ticket_number"
                        type="object"
                        class="btn btn-primary">
                        Generar ticket       
                        </button>
                    </group>
                </page>
                <page name="dg_ready_view" string="Diagnostico Listo" attrs="{'invisible': [('client_state','!=','dg_ready')]}">
                    <group>
                        <field name="equipment_failure_report_for_tech" attrs="{'readonly': [('is_now_in_client_view','=', True)]}"/>
                        <field name="initial_diagnosis" attrs="{'readonly': [('is_now_in_client_view','=', True)], 'required': [('client_state','=','dg_ready')]}" string="Diagnóstico Inicial *"/>
                        <field name="repair_product_required_ids" attrs="{'readonly': [('is_now_in_client_view','=', True)]}">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="description"/>
                                <field name="quantity"/>
                                <field name="product_qty_available"/>
                                <field name="qty_to_order"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="product_qty_available"/>
                                    <field name="qty_to_order"/>
                                </group>
                            </form>
                        </field>
                        <field name="comments" attrs="{'readonly': [('is_now_in_client_view','=', True)]}"/>
                        <field name="is_diagnosis_ready" invisible="1"/>
                    </group>
                    <group attrs="{'invisible': [('is_now_in_client_view','=', True)]}">
                        <button name="set_diagnosis_ready"
                        type="object"
                        class="btn btn-primary"
                        attrs="{'invisible': [('is_diagnosis_ready','=', True)]}">
                        Terminar diagnóstico      
                        </button>
                    </group>
                    <br/>
                    <span>Campos obligatorios (*)</span>
                    <br/>
                </page>
                <page name="quoted_view" string="Cotizado" attrs="{'invisible': [('client_state','!=','quoted')]}">
                    <field name="has_confirmed_quotation" invisible="1"/>
                    <field name="has_quotation" invisible="1"/>
                </page>
            </xpath>
		</field>
	</record>


    <!-- _________________________________________________________________________ -->
    <!-- QUICK CREATE -->
    <!-- _________________________________________________________________________ -->


    <record id="quick_create_crm_lead_form" model="ir.ui.view">
        <field name="name">crm.lead.form.quick_create</field>
        <field name="model">crm.lead</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" string="Servicio *" placeholder="Reparación de ..." required="1"/>
                    <field name="repair_order_type_id" required="1" string="Tipo de Servicio a Desarrollar *"/>
                    <field name="create_date" invisible="1"/>
                    <span>Campos Obligatorios (*)</span>
                    <br/>
                </group>
            </form>
        </field>
    </record>
    
    <!-- _________________________________________________________________________ -->
    <!-- ACCIONES -->
    <!-- _________________________________________________________________________ -->


    <!-- Acción de atención al cliente -->
    <record id="crm_lead_action_client" model="ir.actions.act_window">
        <field name="name">Atención al Cliente</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                  No hay registros para mostrar
            </p>
        </field>
        <field name="domain">['|',('is_from_client_view', '=', True),('is_displayed_in_both', '=', True)]</field>
        <field name="context">{'default_is_from_client_view': True}</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('dv_repair_equipment.crm_lead_client_kanban_view')}),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('crm.crm_case_tree_view_oppor')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('crm.crm_lead_view_form')}),]"/>
    </record>

    <!-- Acción para el tecnico -->
    <record id="crm_lead_action_technician" model="ir.actions.act_window">
        <field name="name">Tecnico</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                  No hay registros para mostrar
            </p>
        </field>
        <field name="domain">['|',('is_from_client_view', '=', False),('is_displayed_in_both', '=', True)]</field>
        <field name="context">{'default_is_from_client_view': False}</field>
        <field name="view_ids" eval="[
          (5, 0, 0),
          (0, 0, {'view_mode': 'kanban', 'view_id': ref('dv_repair_equipment.crm_lead_technician_kanban_view')}),
          (0, 0, {'view_mode': 'tree', 'view_id': ref('crm.crm_case_tree_view_oppor')}),
          (0, 0, {'view_mode': 'form', 'view_id': ref('crm.crm_lead_view_form')}),]"/>
      </record>
  </odoo>