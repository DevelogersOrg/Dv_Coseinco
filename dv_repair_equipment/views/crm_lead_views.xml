<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="crm_lead_action" model="ir.actions.act_window">
      <field name="name">Atención al Cliente</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">crm.lead</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            No hay registros para mostrar
        </p>
      </field>
    </record>

    <record id="crm_lead_kanban_view" model="ir.ui.view">
		<field name="name">crm.lead.view.kanban</field>
		<field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
		<field name="arch" type="xml">
            <xpath expr="//kanban[@default_group_by='stage_id']" position="replace">
                <kanban default_group_by="client_state" class="o_kanban_small_column o_kanban_project_tasks" on_create="quick_create">
                    <field name="client_state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <h1><field name="repair_order_type_id"/></h1>
                                <div class="oe_kanban_details d-flex flex-column">
                                    <strong class="o_kanban_record_title oe_partner_heading">Servicio: <field name="name"/></strong>
                                    <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                    <p>N° Ticket: <field name="ticket_number"/></p>
                                    <p>Cliente: <field name="partner_id"/></p>
                                    <p>Asignado a: <field name="repair_user_id"/></p>
                                    <button name="action_create_repair_order"
                                        type="object"
                                        class="btn btn-primary">
                                        Confirmar
                                    </button>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </xpath>
		</field>
	</record>

    <record id="crm_lead_form_view_inherited" model="ir.ui.view">
		<field name="name">crm.lead.view.form.inherited</field>
		<field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
		<field name="arch" type="xml">
            <xpath expr="//page[@name='lead']" position="after">
                <page name="new_fields" string="Datos">
                    <group>
                        <field name="repair_order_type_id"/>
                        <field name="ticket_number"/>
                        <field name="repair_product_id"/>
                        <field name="repair_location_id"/>
                        <field name="repair_user_id"/>

                        <field name="repair_order_id"/>
                    </group>
                </page>
            </xpath>
		</field>
	</record>
    
  </odoo>