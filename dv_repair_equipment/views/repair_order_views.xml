<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="repair_order_action" model="ir.actions.act_window">
      <field name="name">Tecnicos</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">repair.order</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            No hay registros para mostrar
        </p>
      </field>
    </record>

    <record id="view_repair_order_inherit" model="ir.ui.view">
        <field name="name">repair.order.kanban.inherited</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_kanban"/>
        <field name="arch" type="xml">
          <xpath expr="//kanban[@class='o_kanban_mobile']" position="replace">
            <kanban class="o_kanban_mobile" sample="1" default_group_by="repair_state" on_create="quick_create" quick_create_view="dv_repair_equipment.quick_create_repair_order_form" records_draggable="false">
                <field name="repair_state" />
                <templates>
                    <t t-name="kanban-box">
                      <div class="oe_kanban_global_click">
                        <div class="oe_kanban_details d-flex flex-column">
                          <t t-if="record.repair_state.raw_value == 'new'">
                            <div class="o_kanban_record_top">
                                <span class="badge badge-primary">Nuevo</span>
                            </div>
                            <p><field name="name"/> - <field name="repair_order_type_id"/></p>
                          </t>
                        <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                          <button name="action_change_state"
                              type="object"
                              class="btn btn-primary">
                              Confirmar
                          </button>
                        </div>
                      </div>
					          </t>
                </templates>
            </kanban>
          </xpath>
        </field>
    </record>
    

    <record id="quick_create_repair_order_form" model="ir.ui.view">
      <field name="name">repair.order.form.quick_create</field>
      <field name="model">repair.order</field>
      <field name="priority">1000</field>
      <field name="arch" type="xml">
          <form>
              <group>
                  <field name="description" string="Servicio" placeholder="ReparaciÃ³n de" required="1"/>
                  <field name="repair_order_type_id" required="1"/>
                  <field name="create_date" invisible="1"/>
              </group>
          </form>
      </field>
  </record>

  </odoo>