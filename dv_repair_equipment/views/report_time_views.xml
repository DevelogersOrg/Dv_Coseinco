<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- #Vista de lista -->
    <record id="report_time_tree_view" model="ir.ui.view">
        <field name="name">report_time_type.view.tree</field>
        <field name="model">report.time</field>
        <field name="arch" type="xml">
            <tree editable="bottom" default_order="start_date asc">
                <header>
                    <button name="download_time_excel_report" string="Generar Reporte" type="object" class="oe_highlight" groups="dv_repair_equipment.client_app_group_admin"/>
                </header>
                <field name="name"/>
                <field name="module"/>
                <field name="stage"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="time"/>
                <field name="user_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <!-- #Accion de ventana -->
    <record id="report_time_type_action" model="ir.actions.act_window">
        <field name="name">Reporte de Tiempos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.time</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'group_by':['name']
        }</field>
    </record>
</odoo>