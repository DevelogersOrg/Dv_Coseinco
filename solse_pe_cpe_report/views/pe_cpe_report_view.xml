<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
	<record id="view_cpe_report_form" model="ir.ui.view">
		<field name="name">solse.pe.cpe.report.form</field>
		<field name="model">solse.pe.cpe.report</field>
		<field name="priority" eval="1"/>
		<field name="arch" type="xml">
			<form string="Reporte">
			<sheet>
				<group>
					<group>
						<field name="name" />
						<field name="fecha_inicio" />
						<field name="fecha_fin" />
						<field name="partner_id" />
					</group>
					<group>
						<button
							name="generate_report"
							type="object"
							string="Generar reporte"
						/>
					</group>
				</group>
				<group>
					<field name="reporte_nombre" />
					<field name="reporte_binary" />
				</group>
			</sheet>
			</form>
		</field>
	</record>
	<record id="action_cpe_reporte_form" model="ir.actions.act_window">
		<field name="name">Reporte CPE</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">solse.pe.cpe.report</field>
		<field name="view_mode">tree,form</field>
		<field name="filter" eval="True"/>
		<field name="help" type="html">
		  <p class="o_view_nocontent_smiling_face">
			
		  </p><p>
			
		  </p>
		</field>
	</record>

	<!-- nueva vista lista lote -->
	<record id="vista_lista_cpes" model="ir.ui.view">
		<field name="name">account.move.view.tree</field>
		<field name="model">account.move</field>
		<field name="arch" type="xml">
			<tree create="0">
				<field name="id" invisible="1"/>
				<field name="name" invisible="1"/>
				<field name="l10n_latam_document_type_id" readonly="1" invisible="1"/>
				<field name="l10n_latam_document_number" readonly="1"/>
				<field name="currency_id" readonly="1"/>
				<field name="tipo_cambio" readonly="1"/>
				<field name="amount_total" readonly="1"/>
				<field name="amount_untaxed_signed" readonly="1"/>
				<field name="amount_tax_signed" readonly="1"/>
				<field name="estado_sunat_string" readonly="1"/>
				<field name="partner_id" readonly="1"/>
				<field name="nro_doc_socio" readonly="1"/>
				<field name="invoice_date" readonly="1"/>
			</tree>
		</field>
	</record>

	<record id="action_cpe_reporte_lista" model="ir.actions.act_window">
		<field name="name">Reporte CPE's</field>
		<field name="res_model">account.move</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_mode">tree</field>
		<field name="view_id" ref="vista_lista_cpes"/>
		<field name="domain">[('state', '=', 'posted'), ('move_type', 'in', ['out_invoice', 'out_refund'])]</field>
		<field name="context">{}</field>
	</record> 

	<!-- Inicio 
	<menuitem name="Reportes CPE" id="cpe_reporte_menu_g"/> -->
	<menuitem name="Reporte CPE" id="cpe_reporte_facturas" parent="account.menu_finance_receivables" sequence="100" action="action_cpe_reporte_form"/>

	<menuitem name="Lista CPE'S" id="cpe_reporte_facturas_lista" parent="account.menu_finance_receivables" sequence="101" action="action_cpe_reporte_lista"/>
</data>
</odoo>